;format-connected-underline = ${colors.cyan}
format-connected-prefix-foreground = ${colors.cyan}
format-connected-prefix = "  "
format-connected-prefix-font = 2
label-connected = %upspeed:8%
label-connected-font = 3

format-disconnected =

