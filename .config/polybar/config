[colors]
background = #121212
foreground = #FFFFFF
primary = #FFFFFF
secondary = #BBBBBB

black = #121212
red = #FA2573
green = #98E123
yellow = #DFD460
blue = #1080D0
magenta = #8700FF
cyan = #43A8D0
white = #BBBBBB

[bar/test]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

border-size = 2
border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = System San Francisco Regular:size=10
font-1 = Font Awesome:size=10

modules-left = i3 mpd
modules-center =
modules-right = memory cpu wlan wlan_down wlan_up eth eth_down eth_up battery temperature volume date time

tray-position = right
tray-padding-left = 2
tray-padding-right = 2
tray-background = ${colors.background}

wm-restack = i3

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-font = 2
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.blue}
label-focused-underline = ${colors.background}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-font = 2
label-unfocused-foreground = ${colors.secondary}
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-font = 2
label-visible-foreground = ${colors.primary}
label-visible-background = ${colors.background}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-font = 2
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.red}
label-urgent-underline = ${colors.background}
label-urgent-padding = 2

[module/mpd]
type = internal/mpd

format-playing = <icon-prev> <icon-stop> <toggle> <icon-next>   <label-song>
format-paused = <icon-prev> <icon-stop> <toggle> <icon-next>   <label-song>
format-stopped =

icon-prev = "  "
icon-prev-font = 2
icon-prev-foreground = ${colors.green}
icon-stop = "  "
icon-stop-font = 2
icon-stop-foreground = ${colors.green}
icon-play = "  "
icon-play-font = 2
icon-play-foreground = ${colors.green}
icon-pause = "  "
icon-pause-font = 2
icon-pause-foreground = ${colors.green}
icon-next = "  "
icon-next-font = 2
icon-next-foreground = ${colors.green}

label-song-maxlen = 75
label-song-ellipsis = true
label-song-foreground = ${colors.green}

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.secondary}
label = %percentage:2:2%%

[module/memory]
type = internal/memory
interval = 1
format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.secondary}
label = %percentage_used:2:2%%

[module/wlan]
