[colors]
background = #121212
primary = #FFFFFF

black = #121212
red = #FA2573
green = #98E123
yellow = #DFD460
blue = #1080D0
magenta = #8700FF
cyan = #43A8D0
white = #BBBBBB

[bar/top_primary]
monitor = ${env:MONITOR}
width = 100%
fixed-center = false

background = ${colors.background}
foreground = ${colors.primary}

line-size = 2
line-color = ${colors.background}

border-size = 1
border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = System San Francisco Text:size=10
font-1 = Font Awesome:size=10
font-2 = DejaVu Sans Mono:size=10

modules-left = i3
modules-center =
modules-right = memory cpu wlan wlan_down wlan_up eth eth_down eth_up battery temperature volume date time

wm-restack = i3

[bar/bottom_primary]
monitor = ${env:MONITOR}
width = 100%
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.primary}

line-size = 2
line-color = ${colors.background}

border-size = 1
border-color = ${colors.background}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = System San Francisco Regular:size=10
font-1 = Font Awesome:size=10
font-2 = DejaVu Sans Mono:size=10

modules-left = mpd
modules-center =
modules-right =

tray-position = right
tray-padding-left = 2
tray-padding-right = 2
tray-background = ${colors.background}

wm-restack = i3

