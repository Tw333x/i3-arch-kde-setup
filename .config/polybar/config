format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.foreground}
format-suffix            = 
format-suffix-foreground = ${colors.foreground}
format-suffix-background = ${colors.background}

[module/wlan]
type      = internal/network
interface = wlp3s0
interval  = 1.0

format-connected-background = ${colors.background}
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.background}
format-connected-prefix-background = ${colors.background}
format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.background}
format-connected-suffix-background = ${colors.background}

label-connected            =  %signal:3%% |  %downspeed:8% |  %upspeed:8%
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}
label-connected-padding    = 1

format-disconnected =

[module/eth]
type = internal/network
interface = enp5s0
interval = 1.0

format-connected-background = ${colors.background}
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.background}
format-connected-prefix-background = ${colors.foreground}
format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.foreground}
format-connected-suffix-background = ${colors.background}

label-connected            =  %downspeed:8%   %upspeed:8%
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.background}
label-connected-padding    = 1

format-disconnected =

[module/date]
type = internal/date
interval = 1

time = %H:%M
time-alt = %H:%M:%S

date = %d-%m-%Y
date-alt = %d-%m-%Y

format-prefix            = 
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.foreground}

label            =  %date%   %time%
label-padding    = 1
label-foreground = ${colors.foreground}
label-background = ${colors.background}

[module/volume]
type     = internal/volume
interval = 0.1

label-volume            =  %percentage:3%%
label-volume-foreground = ${colors.foreground}
label-volume-background = ${colors.background}
label-volume-padding    = 1

format-volume-background        = ${colors.background}
format-volume-prefix            = 
format-volume-prefix-foreground = ${colors.background}
format-volume-prefix-background = ${colors.foreground}
format-volume-suffix            = 
format-volume-suffix-foreground = ${colors.foreground}
format-volume-suffix-background = ${colors.background}

label-muted            =  %percentage:3%%
label-muted-foreground = ${colors.background}
label-muted-background = ${colors.red}
label-muted-padding    = 1

format-muted-background        = ${colors.red}
format-muted-prefix            = 
format-muted-prefix-foreground = ${colors.red}
format-muted-prefix-background = ${colors.foreground}
format-muted-suffix            = 
format-muted-suffix-foreground = ${colors.foreground}
format-muted-suffix-background = ${colors.red}

[module/battery]
type    = internal/battery
battery = BAT0
adapter = AC
full-at = 97

format-charging          = <animation-charging><label-charging>
format-discharging       = <ramp-capacity><label-discharging>
format-prefix            = 
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
format-suffix            = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.foreground}

label-charging    = %percentage:3%%
label-discharging = %percentage:3%%

format-full-prefix = "  "
format-full-prefix-foreground = ${colors.green}

ramp-capacity-0          = "  "
ramp-capacity-1          = "  "
ramp-capacity-2          = "  "
ramp-capacity-3          = "  "
ramp-capacity-4          = "  "
ramp-capacity-foreground = ${colors.red}

animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-foreground = ${colors.yellow}
animation-charging-framerate = 750

[module/temperature]
type             = internal/temperature
thermal-zone     = 0
warn-temperature = 75

format                   = <ramp><label>
format-foreground        = ${colors.foreground}
format-background        = ${colors.background}
format-warn              = <ramp><label-warn>
format-warn-foreground   = ${colors.background}
format-warn-background   = ${colors.red}
format-prefix            = 
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.foreground}
format-suffix            = 
format-suffix-foreground = ${colors.foreground}
format-suffix-background = ${colors.background}

label                 = %temperature:3%
label-foreground      = ${colors.foreground}
label-background      = ${colors.background}
label-padding         = 1
label-warn            = %temperature:3%
label-warn-foreground = ${colors.background}
label-warn-background = ${colors.red}
label-warn-padding    = 1

ramp-0 = "  "
ramp-1 = "  "
ramp-2 = "  "
ramp-3 = "  "
ramp-4 = "  "

[settings]
screenchange-reload = true

[global/wm]
margin-top    = 0
margin-bottom = 0
