[colors]
foreground = ${xrdb:foreground}
background = ${xrdb:background}

black 	= ${xrdb:color0}
red     = ${xrdb:color1}
green   = ${xrdb:color2}
yellow  = ${xrdb:color3}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan    = ${xrdb:color6}
white   = ${xrdb:color7}

[bar/top_primary]
monitor      = ${env:MONITOR}
width        = 100%
height       = 15
fixed-center = false

border-color       = ${colors.foreground}
border-bottom-size = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Inconsolata:size=8;1
font-1 = Font Awesome:size=10;2
font-2 = Inconsolata for Powerline:size=11;2

modules-left   = i3
modules-center = 
modules-right  = mpd memory cpu wlan eth battery temperature volume date

tray-position   = left
tray-padding    = 5
tray-scale      = 1
tray-background = ${colors.background}

[bar/top_secondary]
monitor      = ${env:MONITOR}
width        = 100%
height       = 15
fixed-center = false

border-color       = ${colors.foreground}
border-bottom-size = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Inconsolata:size=8;1
font-1 = Font Awesome:size=10;2
font-2 = Inconsolata for Powerline:size=11;2

modules-left   = i3
modules-center = 
modules-right  = mpd memory cpu wlan eth battery temperature volume date

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   =  %name% %{B#0E1019 F#008df8}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.blue}
label-unfocused 		   =  %name% %{B#0E1019 F#fffaf4}
label-unfocused-foreground = ${colors.background}
label-unfocused-background = ${colors.foreground}
label-visible 			   =  %name% %{B#0E1019 F#ffb900}
label-visible-foreground   = ${colors.background}
label-visible-background   = ${colors.yellow}
label-urgent 			   =  %name% %{B#0E1019 F#ff000f}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

[module/mpd]
type = internal/mpd

format-playing            = "%{B#8ce10b F#0E1019}<icon-prev><toggle><icon-next>  <label-song> "
format-playing-foreground = ${colors.background}
format-playing-background = ${colors.green}
format-paused             = "%{B#ffb900 F#0E1019}<icon-prev><toggle><icon-next>  <label-song> "
format-paused-foreground  = ${colors.background}
format-paused-background  = ${colors.yellow}
format-stopped            = "%{B#ff000f F#0E1019}<icon-prev><toggle><icon-next> "
format-stopped-foreground = ${colors.background}
format-stopped-background = ${colors.red}

icon-prev  = " "
icon-play  = " "
icon-pause = " "
icon-next  = " "

label-song-maxlen        = 40
label-song-ellipsis      = true
label-song-padding-right = 1

format-playing-prefix            = 
format-playing-prefix-foreground = ${colors.green}
format-playing-prefix-background = ${colors.background}
format-playing-suffix            = 
format-playing-suffix-foreground = ${colors.foreground}
format-playing-suffix-background = ${colors.green}
format-paused-prefix             = 
format-paused-prefix-foreground  = ${colors.yellow}
format-paused-prefix-background  = ${colors.background}
format-paused-suffix             = 
format-paused-suffix-foreground  = ${colors.foreground}
format-paused-suffix-background  = ${colors.yellow}
format-stopped-prefix            = 
format-stopped-prefix-foreground = ${colors.red}
format-stopped-prefix-background = ${colors.background}
format-stopped-suffix            = 
format-stopped-suffix-foreground = ${colors.foreground}
format-stopped-suffix-background = ${colors.red}

[module/cpu]
type     = internal/cpu
interval = 1

label            =  %percentage:3%%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding    = 1

format-background        = ${colors.background}
format-prefix            = 
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.foreground}
format-suffix            = 
format-suffix-foreground = ${colors.foreground}
format-suffix-background = ${colors.background}

[module/memory]
type     = internal/memory
