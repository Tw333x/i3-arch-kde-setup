tray-scale       = 1.0

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   = %{B#8ce10b F#ffffff}%{F-B-} %name% %{B#ffffff F#8ce10b}%{F-B-}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.green}
label-unfocused 		   = %{B#232323 F#ffffff}%{F-B-} %name% %{B#ffffff F#232323}%{F-B-}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.black}
label-visible 			   = %{B#232323 F#ffffff}%{F-B-} %name% %{B#ffffff F#232323}%{F-B-}
label-visible-foreground   = ${colors.green}
label-visible-background   = ${colors.black}
label-urgent 			   = %{B#ff000f F#ffffff}%{F-B-} %name% %{B#ffffff F#ff000f}%{F-B-}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

