[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   =  %name% %{B#0e1019 F#abe15b}%{F-B-}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.bgreen}
label-unfocused 		   = %{B#232323 F#0e1019}%{F-B-} %name% %{B#0e1019 F#232323}%{F-B-}
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.bblack}
label-visible 			   = %{B#444444 F#0e1019}%{F-B-} %name% %{B#0e1019 F#444444}%{F-B-}
label-visible-foreground   = ${colors.foreground}
label-visible-background   = ${colors.black}
label-urgent 			   =  %name% %{B#0e1019 F#ff000f}%{F-B-}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

