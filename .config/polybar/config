[bar/top]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = xos4 Terminess Powerline:size=8;2
font-1 = Font Awesome:size=8;2

modules-left   = start_indicator_left i3
modules-center = 
modules-right  = mpd mpd_controls battery memory cpu wlan eth temperature volume date

