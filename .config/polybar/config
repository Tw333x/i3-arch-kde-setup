[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-font = 2
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.blue}
label-focused-underline = ${colors.blue}
label-focused-padding-left = 2
label-focused-padding-right = 2
label-focused-margin-left = 1
label-focused-margin-right = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-font = 2
label-unfocused-foreground = ${colors.primary}
label-unfocused-background = ${colors.background}
;label-unfocused-underline = ${colors.primary}
label-unfocused-padding-left = 2
label-unfocused-padding-right = 2
label-unfocused-margin-left = 1
label-unfocused-margin-right = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-font = 2
label-visible-foreground = ${colors.primary}
label-visible-background = ${colors.background}
label-visible-underline = ${colors.primary}
label-visible-padding-left = 2
label-visible-padding-right = 2
label-visible-margin-left = 1
label-visible-margin-right = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-font = 2
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.red}
label-urgent-underline = ${colors.red}
label-urgent-padding-left = 2
label-urgent-padding-right = 2
label-urgent-margin-left = 1
label-urgent-margin-right = 1

[module/mpd]
type = internal/mpd

format-playing = <icon-prev> <icon-stop> <toggle> <icon-next>   <label-time>   <label-song>
format-playing-foreground = ${colors.green}
format-playing-underline = ${colors.green}
format-paused = <icon-prev> <icon-stop> <toggle> <icon-next>   <label-time>   <label-song>
format-paused-foreground = ${colors.yellow}
format-paused-underline = ${colors.yellow}
format-stopped = <icon-prev> <icon-stop> <toggle> <icon-next>
format-stopped-foreground = ${colors.red}
format-stopped-underline = ${colors.red}

icon-prev = "  "
icon-prev-font = 2
icon-stop = "  "
icon-stop-font = 2
icon-play = "  "
icon-play-font = 2
icon-pause = "  "
icon-pause-font = 2
icon-next = "  "
icon-next-font = 2
;icon-repeat = "  "
;icon-repeat-font = 2
;icon-random = "  "
;icon-random-font = 2

label-song-maxlen = 250
label-song-ellipsis = true
label-song-foreground = ${colors.primary}

[module/cpu]
type = internal/cpu
interval = 1

;format-underline = ${colors.cyan}
format-prefix = "  "
format-prefix-foreground = ${colors.cyan}
format-prefix-font = 2
label = %percentage:2%%
label-font = 3

[module/memory]
type = internal/memory
interval = 1

;format-underline = ${colors.cyan}
format-prefix = "  "
format-prefix-foreground = ${colors.cyan}
format-prefix-font = 2
label = %percentage_used:2%%
label-font = 3

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 1.0

;format-connected-underline = ${colors.cyan}
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.cyan}
format-connected-prefix-font = 2
label-connected = %signal:2%%
label-connected-font = 3

format-disconnected =

[module/wlan_down]
type = internal/network
interface = wlp3s0
