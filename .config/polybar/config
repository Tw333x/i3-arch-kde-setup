[bar/top]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

border-color       = ${colors.black}
border-bottom-size = 2

background = ${colors.black}
foreground = ${colors.foreground}

font-0 = xos4 Terminess Powerline:size=10;2
font-1 = Font Awesome:size=9;2

modules-left   = i3
modules-center = 
modules-right  = mpd memory cpu wlan eth battery temperature volume date

[bar/top_tray]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

border-color       = ${colors.black}
border-bottom-size = 2

background = ${colors.black}
foreground = ${colors.foreground}

font-0 = xos4 Terminess Powerline:size=10;2
font-1 = Font Awesome:size=9;2

modules-left   = i3
modules-center = 
modules-right  = mpd memory cpu wlan eth battery temperature volume date

tray-position = right
tray-detached = false
tray-maxsize = 14
tray-transparent = false
tray-background = ${colors.foreground}
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 1
tray-scale = 1.0

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   =  %name% %{B#282A2E F#5F819D}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.blue}
label-unfocused 		   =  %name% %{B#282A2E F#C5C8C6}
label-unfocused-foreground = ${colors.background}
label-unfocused-background = ${colors.foreground}
label-visible 			   =  %name% %{B#282A2E F#DE935F}
label-visible-foreground   = ${colors.background}
label-visible-background   = ${colors.yellow}
label-urgent 			   =  %name% %{B#282A2E F#A54242}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

format-prefix            = "  %{B#282A2E F#8C9440}"
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.green}

