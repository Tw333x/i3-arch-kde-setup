[bar/top]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = xos4 Terminess Powerline:size=8;2
font-1 = Font Awesome:size=9;2

modules-left   = mpd_controls i3 left_end_indicator
modules-center = mpd_song
modules-right  = right_end_indicator battery memory cpu wlan eth eth_laptop temperature volume date time

[bar/top_tray]
monitor      = ${env:MONITOR}
width        = 100%
height       = 14
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

