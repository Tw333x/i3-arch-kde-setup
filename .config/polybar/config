[colors]
transparent = #01FFFFFF
foreground  = ${xrdb:foreground}
background  = ${xrdb:background}

black 		= ${xrdb:color0}
red      	= ${xrdb:color1}
green    	= ${xrdb:color2}
yellow   	= ${xrdb:color3}
blue     	= ${xrdb:color4}
magenta 	= ${xrdb:color5}
cyan     	= ${xrdb:color6}
white    	= ${xrdb:color7}
grey     	= #7c6f64

[bar/top_primary]
monitor = ${env:MONITOR}
width = 100%
height = 17
fixed-center = false

background = ${colors.transparent}
foreground = ${colors.transparent}

font-0 = Fira Mono:size=9;2
font-1 = Font Awesome:size=9;1
font-2 = Fira Mono for Powerline:Bold:size=11;2

modules-left = i3
modules-center = mpd
modules-right = memory cpu wlan eth battery temperature volume date

tray-position    = left
tray-padding     = 5
tray-scale       = 1
tray-transparent = false
tray-background  = ${colors.background}

wm-restack = i3

[bar/top_secondary]
monitor = ${env:MONITOR}
width = 100%
height = 17
fixed-center = false

background = ${colors.transparent}
foreground = ${colors.foreground}

font-0 = Fira Mono:size=9;2
font-1 = Font Awesome:size=9;1
font-2 = Fira Mono for Powerline:Bold:size=11;2

modules-left   = i3
modules-center = mpd
modules-right  = memory cpu wlan eth battery temperature volume date

[module/i3]
type 			= internal/i3
format 			= <label-state>
index-sort      = true
wrapping-scroll = true
strip-wsnumbers = false
pin-workspaces  = true

label-focused 			   = %{B#008df8 F#0E1019}%{B#008df8 F#0E1019} %name% %{B#0E1019 F#008df8}%{B- F-}
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.blue}
label-unfocused 		   = %{B#fffaf4 F#0E1019}%{B#fffaf4 F#0E1019} %name% %{B#0E1019 F#fffaf4}%{B- F-}
label-unfocused-foreground = ${colors.background}
label-unfocused-background = ${colors.foreground}
label-visible 			   = %{B#ffb900 F#0E1019}%{B#ffb900 F#0E1019} %name% %{B#0E1019 F#ffb900}%{B- F-}
label-visible-foreground   = ${colors.background}
label-visible-background   = ${colors.yellow}
label-urgent 			   = %{B#ff000f F#0E1019}%{B#ff000f F#0E1019} %name% %{B#0E1019 F#ff000f}%{B- F-}
label-urgent-foreground    = ${colors.background}
label-urgent-background    = ${colors.red}

format-prefix 			 = "   "
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
format-suffix 			 = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.transparent}

[module/mpd]
type = internal/mpd

format-playing            = %{B#8ce10b F#0E1019}<icon-prev><toggle><icon-next> | <label-time> | <label-song>
format-playing-foreground = ${colors.background}
format-playing-background = ${colors.green}
format-paused             = %{B#ffb900 F#0E1019}<icon-prev><toggle><icon-next> | <label-time> | <label-song>
format-paused-foreground  = ${colors.background}
format-paused-background  = ${colors.yellow}
format-stopped            = %{B#ff000f F#0E1019}<icon-prev><toggle><icon-next>
format-stopped-foreground = ${colors.background}
format-stopped-background = ${colors.red}

icon-prev  = " "
icon-play  = " "
icon-pause = " "
icon-next  = " "

label-song-maxlen        = 40
label-song-ellipsis      = true
label-song-padding-right = 1

format-playing-prefix            = %{B#01FFFFFF F#0E1019}%{B- F-}
format-playing-prefix-foreground = ${colors.green}
format-playing-prefix-background = ${colors.background}
format-playing-suffix            = %{B#01FFFFFF F#0E1019}
format-playing-suffix-foreground = ${colors.green}
format-playing-suffix-background = ${colors.background}
format-paused-prefix             = %{B#01FFFFFF F#0E1019}%{B- F-}
format-paused-prefix-foreground  = ${colors.yellow}
format-paused-prefix-background  = ${colors.background}
format-paused-suffix             = %{B#01FFFFFF F#0E1019}
format-paused-suffix-foreground  = ${colors.yellow}
format-paused-suffix-background  = ${colors.background}
format-stopped-prefix            = %{B#01FFFFFF F#0E1019}%{B- F-}
format-stopped-prefix-foreground = ${colors.red}
format-stopped-prefix-background = ${colors.background}
format-stopped-suffix            = %{B#01FFFFFF F#0E1019}
format-stopped-suffix-foreground = ${colors.red}
format-stopped-suffix-background = ${colors.background}

[module/cpu]
type     = internal/cpu
interval = 1

label            =  %percentage:3%%
label-foreground = ${colors.background}
label-background = ${colors.blue}
label-padding    = 1

format-background        = ${colors.blue}
format-prefix            = 
format-prefix-foreground = ${colors.blue}
format-prefix-background = ${colors.background}
format-suffix            = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.blue}

[module/memory]
type     = internal/memory
interval = 1

label            =  %percentage_used:3%%
label-foreground = ${colors.background}
label-background = ${colors.red}
label-padding    = 1

format-background        = ${colors.red}
format-prefix            = %{B#01ffffff}%{B- F#ff000f}
format-prefix-foreground = ${colors.background}
format-prefix-background = ${colors.background}
format-suffix            = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.red}

[module/wlan]
type      = internal/network
interface = wlp3s0
interval  = 1.0

format-connected-background = ${colors.yellow}
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.yellow}
format-connected-prefix-background = ${colors.background}
format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.background}
format-connected-suffix-background = ${colors.yellow}

label-connected            =  %signal:3%% |  %downspeed:8% |  %upspeed:8%
label-connected-foreground = ${colors.background}
label-connected-background = ${colors.yellow}
label-connected-padding    = 1

format-disconnected =

[module/eth]
type = internal/network
interface = enp5s0
interval = 1.0

format-connected-background = ${colors.yellow}
format-connected-prefix = 
format-connected-prefix-foreground = ${colors.yellow}
format-connected-prefix-background = ${colors.background}
format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.background}
format-connected-suffix-background = ${colors.yellow}

label-connected            =  %downspeed:8% |  %upspeed:8%
label-connected-foreground = ${colors.background}
label-connected-background = ${colors.yellow}
label-connected-padding    = 1

format-disconnected =

[module/date]
type = internal/date
interval = 1

time = %H:%M
time-alt = %H:%M:%S

date = %d-%m-%Y
date-alt = %d-%m-%Y

format-prefix            = 
format-prefix-foreground = ${colors.cyan}
format-prefix-background = ${colors.background}

label            =  %date% |  %time%
label-padding    = 1
label-foreground = ${colors.background}
label-background = ${colors.cyan}

[module/volume]
type     = internal/volume
interval = 0.1

label-volume            =  %percentage:3%%
label-volume-foreground = ${colors.background}
label-volume-background = ${colors.green}
label-volume-padding    = 1

format-volume-background        = ${colors.green}
format-volume-prefix            = 
format-volume-prefix-foreground = ${colors.green}
format-volume-prefix-background = ${colors.background}
format-volume-suffix            = 
format-volume-suffix-foreground = ${colors.background}
format-volume-suffix-background = ${colors.green}

label-muted            =  %percentage:3%%
label-muted-foreground = ${colors.red}
label-muted-background = ${colors.green}
label-muted-padding    = 1

format-muted-background        = ${colors.green}
format-muted-prefix            = 
format-muted-prefix-foreground = ${colors.green}
format-muted-prefix-background = ${colors.background}
format-muted-suffix            = 
format-muted-suffix-foreground = ${colors.background}
format-muted-suffix-background = ${colors.green}

[module/battery]
type    = internal/battery
battery = BAT0
adapter = AC
full-at = 97

format-charging          = <animation-charging><label-charging>
format-discharging       = <ramp-capacity><label-discharging>
format-prefix            = 
format-prefix-foreground = ${colors.foreground}
format-prefix-background = ${colors.background}
format-suffix            = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.foreground}

label-charging    = %percentage:3%%
label-discharging = %percentage:3%%

format-full-prefix = "  "
format-full-prefix-foreground = ${colors.green}

ramp-capacity-0          = "  "
ramp-capacity-1          = "  "
ramp-capacity-2          = "  "
ramp-capacity-3          = "  "
ramp-capacity-4          = "  "
ramp-capacity-foreground = ${colors.red}

animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-foreground = ${colors.yellow}
animation-charging-framerate = 750

[module/temperature]
type             = internal/temperature
thermal-zone     = 0
warn-temperature = 75

format                   = <ramp><label>
format-background        = ${colors.magenta}
format-warn              = <ramp> <label-warn>
format-warn-background   = ${colors.magenta}
format-prefix            = 
format-prefix-foreground = ${colors.magenta}
format-prefix-background = ${colors.background}
format-suffix            = 
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.magenta}

label = %temperature:2%
label-foreground = ${colors.background}
label-background = ${colors.magenta}
label-padding    = 1
label-warn = %temperature:3%
label-warn-foreground = ${colors.red}
label-warn-background = ${colors.magenta}
label-warn-padding    = 1

ramp-0 = "  "
ramp-1 = "  "
ramp-2 = "  "
ramp-3 = "  "
ramp-4 = "  "
ramp-foreground = ${colors.background}
ramp-background = ${colors.magenta}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
